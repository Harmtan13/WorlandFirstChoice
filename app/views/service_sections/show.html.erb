<h1><%= @section.title %></h1>


<div class="album card-text">
  <div class="container">
    <div class="row sortable">
        <% @services.each do |service| %>
          <%= link_to service_show_path(service) do%>
            <div class="card">
              <%= image_tag service.thumb_img unless service.thumb_img.nil? %>
              <div class="card-text">
                <h3><%= link_to service.title, service_show_path(service) %></h3>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
  </div>
</div> 

<% if logged_in?(:site_admin, :editor) %>
  <%= link_to service_new_path do%>
    <div class="icons">
      <p>Add Service <%= fa_icon 'plus' %></p>
    </div>
  <% end %>
<% end %>