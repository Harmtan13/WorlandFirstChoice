<h1><%= @section.title %></h1>


<div class="album card-text">
  <div class="container">
    <div class="row">
        <% @services.each do |service| %>
          <div class="col-md-6">
            <% if service.body? || logged_in?(:site_admin, :editor)%>
              <%= link_to service_show_path(service) do%>
                <div class="card" data-id="<%= service.id %>">
                  <div><%= image_tag(img(service.thumb_img.url, 'thumb'), class: "thumb-image")%></div>
                  <div class="card-text">
                    <h3><%=service.title%></h3>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="card" data-id="<%= service.id %>">
                  <div><%= image_tag(img(service.thumb_img.url, 'thumb'), class: "thumb-image")%></div>
                  <div class="card-text">
                    <h3><%=service.title%></h3>
                  </div>
                </div>
            <% end %>
          </div>
        <% end %>
      </div>
  </div>
</div> 

<% if logged_in?(:site_admin, :editor) %>
  <%= link_to service_new_path do%>
    <div class="icons">
      <p>Add Service <%= fa_icon 'plus' %></p>
    </div>
  <% end %>
<% end %>