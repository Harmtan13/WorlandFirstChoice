<h1><%= @section.title %></h1>
<div class='items-wrapper'>
<% @services.each do |service| %>
<% if service.body? || logged_in?(:site_admin, :editor)%>
  <%= link_to service_show_path(service) do%>
    <div class='item' data-id="<%= service.id %>">
      <%= image_tag(img(service.thumb_img.url, 'thumb'), class: "thumb-image")%>
      <h3><%=link_to service.title, service_show_path(service)%></h3> 
    </div>
  <% end %>

<% else %>
  <div class='item' data-id="<%= service.id %>">
    <%= image_tag(img(service.thumb_img.url, 'thumb'), class: "thumb-image")%>
    <h3><%=service.title%></h3>
  </div>
<% end %>

<% end %>
</div>

<% if logged_in?(:site_admin, :editor) %>
  <%= link_to service_new_path do%>
    <div class="icons">
      <p>Add Service <%= fa_icon 'plus' %></p>
    </div>
  <% end %>
<% end %>