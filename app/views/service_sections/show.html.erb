<h1><%= @section.title %></h1>
<%= link_to "Add Service", service_new_path if logged_in?(:site_admin, :editor)%>

<div class="album card-text">
  <div class="container">
    <div class="row">
        <% @services.each do |service| %>
          <%= link_to service_show_path(service) do%>
            <div class="card">
              <%= image_tag service.thumb_img unless service.thumb_img.nil? %>
              <div class="card-text">
                <h3><%= link_to service.title, service_show_path(service) %></h3>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
  </div>
</div> 