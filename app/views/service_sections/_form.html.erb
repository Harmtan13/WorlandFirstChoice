<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <% @section.errors.full_messages.each do |error| %>
      <%= alert_generator(error) %>
    <% end %>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div>
    <label class='btn btn-info btn-sm'>
      Upload your Image <%= f.file_field :main_img, style: 'display:none;' %>
    </label>
  </div>

  <div>
    <%= f.submit 'Save Service Category', class: 'btn btn-primary'%>
  </div>
<% end %>