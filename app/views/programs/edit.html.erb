<div class="new-therapist">
  <div class="card">
    <div class="card-body">
      <h2> Edit Wellness Program Page</h2>

      <%= form_for(@wellness_program) do |f| %>

        <% if @wellness_program.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@wellness_program.errors.count, "error") %> prevented your contact Information from being updated.</h2>

            <ul>
            <% @wellness_program.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :subtitle %>
          <%= f.text_field :subtitle, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control", rows:10 %>
        </div>

        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_area :price, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit 'update', class: 'btn btn-primary'%>
        </div>

      <% end %>

    </div>
  </div>
</div>