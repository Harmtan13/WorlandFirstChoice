<H1> Edit Wellness Program Page</H1>

<%= form_for(@wellness_program) do |f| %>

  <% if @wellness_program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wellness_program.errors.count, "error") %> prevented your contact Information from being updated.</h2>

      <ul>
      <% @wellness_program.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_area :price %>
  </div>
  <div class="actions">
    <%= f.submit%>
  </div>

<% end %>