<h2> Edit Wellness Program Page</h2>

<%= form_for(@wellness_program) do |f| %>

  <% if @wellness_program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wellness_program.errors.count, "error") %> prevented your contact Information from being updated.</h2>

      <ul>
      <% @wellness_program.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle, class: "form-control" %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows:10 %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.text_area :price, class: "form-control" %>
  </div>
  
  <div>
    <%= f.submit 'update', class: 'btn btn-primary'%>
  </div>

<% end %>