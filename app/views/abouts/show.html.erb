<h2><%= @bios.name %></h2>
<em><%= @bios.greeting %></em>
<p><%= @bios.about_me%></p>


<%= image_tag(img(@bios.main_img.url, 'main'), class: "main-img") %>


<%= link_to "#{fa_icon 'edit'}".html_safe, about_edit_path(@bios) if logged_in?(:site_admin, :editor) %>
<%= link_to "#{fa_icon 'trash'}".html_safe, about_path(@bios), method: :delete, data: { confirm: "Are you sure you want to delete '#{@bios.name}'"} if logged_in?(:site_admin, :editor) %>