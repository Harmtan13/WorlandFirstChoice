<h1>Our Therapists</h1>

<div class="album card-text">
  <div class="container">
    <div class="row <%= "sortable" if logged_in?(:site_admin, :editor) %>">
        <% @bios.each do |bio| %>
          <div class="col-lg-4">
            <%= link_to about_me_path(bio) do%>
              <div class="card" data-id="<%= bio.id %>">
                <%= image_tag(bio.thumb_img.url, class: "index-image") unless bio.thumb_img.url.nil? %>
                <div class="card-text">
                  <h3><%=link_to bio.name, about_me_path(bio) %></h3>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
  </div>
</div> 

<% if logged_in?(:site_admin, :editor) %>
  <%= link_to new_about_path do%>
    <div class="icons">
      <p>Add Therapist <%= fa_icon 'plus' %></p>
    </div>
  <% end %>
<% end %>