  <%= form_for(@bios) do |f| %>

    <% if @bios.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@bios.errors.count, "error") %> prohibited the Creation of New Therapist</h2>

        <ul>
        <% @bios.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :greeting %>
      <%= f.text_field :greeting, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.file_field :thumb_img%>
    </div>

    <div class="form-group">
      <%= f.file_field :main_img%>
    </div>
          

    <div class="form-group">
      <%= f.label :about_me %>
      <%= f.text_area :about_me, class: 'form-control', rows: 15 %>
    </div>

    <div class="actions">
      <%= f.submit 'Save Therapist', class: 'btn btn-primary'%>
    </div>

  <% end %>