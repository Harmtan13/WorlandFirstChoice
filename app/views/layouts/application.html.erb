<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div>
    <div><%= link_to "Home", root_path %></div>
    <div><%= link_to "Services", services_index_path %></div>
    <div><%= link_to "Wellness Program", wellness_index_path %></div>
    <div><%= link_to "Contact Us", contact_index_path %></div>
    <div><%= link_to "Facebook", "https://www.facebook.com/Worland-Physical-Therapy-1551997184864218/", :target => "_blank" %></div>
    <% if current_user.is_a?(User) %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <div><%= link_to "Login", new_user_session_path %></div>
      <div><%= link_to "Register", new_user_registration_path %></div>
    <% end %>
  </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  
    <%= yield %>
  </body>
</html>