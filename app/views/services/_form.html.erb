<%= form_for(@service) do |f| %>
  <% if @service.errors.any? %>
    <% @service.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Worland Physical Therapy", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label class='btn btn-info btn-sm'>
      Upload your Main Image <%= f.file_field :main_img, style: 'display:none;' %>
    </label>
  </div>

  <div class="form-group">
    <label class='btn btn-info btn-sm'>
      Upload your Thumb Image <%= f.file_field :thumb_img, style: 'display:none;' %>
    </label>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>

  <div class="actions">
    <%= f.submit 'Save Service', class: 'btn btn-primary' %>
  </div>
<% end %>